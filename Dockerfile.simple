FROM node:18-alpine

WORKDIR /app

# Copy package files and install
COPY package*.json ./
RUN npm install

# Copy app files
COPY . .

# Set dummy DATABASE_URL for Prisma (real one comes from env vars at runtime)
ARG DATABASE_URL="postgresql://dummy:dummy@localhost:5432/dummy"
ENV DATABASE_URL=$DATABASE_URL

# Generate Prisma and build
RUN npx prisma generate
RUN npm run build

# Expose and start
EXPOSE 3000
CMD ["npm", "start"]

